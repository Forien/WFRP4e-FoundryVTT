<section class="tab {{tab.cssClass}}" data-group="primary" data-tab="{{tab.id}}">
    <div class="condition-section">
        {{#each effects.conditions}}
            <div class="condition">
                <a>{{localize this.name}}</a>
                <div class="controls">
                    {{#if this.isNumberedCondition}}
                        <a>{{this.conditionValue}}</a>
                    {{else}}
                        {{#if this.existing}}
                            <a><i class="far fa-check-circle"></i></a>
                        {{else}}
                            <a><i class="far fa-circle"></i></a>
                        {{/if}}
                    {{/if}}
                </div>
            </div>
        {{/each}}
    </div>
    <div class="sheet-list">
        <div class="list-header row-content">
            <div class="list-name">{{localize "SHEET.TemporaryEffects"}}</div>
            <div class="flex">{{localize "SHEET.Source"}}</div>
            <div class="list-controls">
                <a class="list-control">
                    <i class="fas fa-plus"></i>
                </a>
            </div>
        </div>
        <div class="list-content">
            {{#each effects.temporary}}
                <div class="list-row">
                    <div class="row-content">
                        {{> systems/wfrp4e/templates/partials/list-effect.hbs effect=this}}
                    </div>
                    <div class="row-content">
                        {{#if effect.manualScripts.length}}
                            <div class="manual-script-buttons">
                                {{> systems/wfrp4e/templates/partials/manual-scripts.hbs scripts=effect.manualScripts}}
                            </div>
                        {{/if}}
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="sheet-list">
        <div class="list-header row-content">
            <div class="list-name">{{localize "Injury"}}</div>
            <div>{{localize "Location"}}</div>
            <div>{{localize "Duration"}}</div>
            <div class="list-controls">
                <a class="list-control"><i class="fas fa-plus"></i></a>
            </div>
        </div>
        <div class="list-content">
            {{#each items.injury}}
                <div class="list-row">
                    <div class="row-content">
                        <div class="list-name">
                            <img src="{{this.img}}">
                            <a class="label">{{this.name}}</a>
                        </div>

                        <div>{{this.system.location.value}}</div>

                        <a>
                            {{#if this.sytsem.duration.permanent}}
                                {{localize "Permanent"}}
                            {{else}}
                                {{this.system.duration.value}} {{localize "days"}}
                            {{/if}}
                        </a>

                        <div class="list-controls"></div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="sheet-list">
        <div class="list-header row-content">
            <div class="list-name">{{localize "Injury"}}</div>
            <div>{{localize "Location"}}</div>
            <div class="list-controls">
                <a class="list-control"><i class="fas fa-plus"></i></a>
            </div>
        </div>
        <div class="list-content">
            {{#each items.critical}}
                <div class="list-row">
                    <div class="row-content">
                        <div class="list-name">
                            <img src="{{this.img}}">
                            <a class="label">{{this.name}}</a>
                        </div>

                        <div>{{this.system.location.value}}</div>

                        <div class="list-controls"></div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="sheet-list">
        <div class="list-header row-content">
            <div class="list-name">{{localize "Psychology"}}</div>
            <div class="list-controls">
                <a class="list-control"><i class="fas fa-plus"></i></a>
            </div>
        </div>
        <div class="list-content">
            {{#each items.psychology}}
                <div class="list-row">
                    <div class="row-content">
                        <div class="list-name">
                            <img src="{{this.img}}">
                            <a class="label">{{this.name}}</a>
                        </div>

                        <div class="list-controls"></div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="sheet-list">
        <div class="list-header row-content">
            <div class="list-name">{{localize "Corruption&Mutation"}}</div>
            <div class="list-controls">
                <a class="list-control"><i class="fas fa-plus"></i></a>
            </div>
        </div>
        <div class="list-content">
            {{#each items.mutation}}
                <div class="list-row">
                    <div class="row-content">
                        <div class="list-name">
                            <img src="{{this.img}}">
                            <a class="label">{{this.name}}</a>
                        </div>

                        <div class="list-controls"></div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="sheet-list">
        <div class="list-header row-content">
            <div class="list-name">{{localize "Disease"}}</div>
            <div>{{localize "Incubation"}}</div>
            <div>{{localize "Duration"}}</div>
            {{#if (isGM)}}
                <div>{{localize "Diagnosed"}}</div>
            {{/if}}
            <div class="list-controls">
                <a class="list-control"><i class="fas fa-plus"></i></a>
            </div>
        </div>
        <div class="list-content">
            {{#each items.disease}}
                {{#if item.system.show}}
                    <div class="list-row">
                        <div class="row-content">
                            <div class="list-name">
                                <img src="{{this.img}}">
                                <a class="label">{{this.name}}</a>
                            </div>

                            {{#if (isGM)}}
                                <a>{{item.system.incubation.value}}</a>
                                <a>{{item.system.duration.value}} {{item.duration.unit}}</a>
                                {{#if item.system.diagnosed}}
                                    <a><i class="far fa-check-circle"></i></a>
                                {{else}}
                                    <a><i class="far fa-circle"></i></a>
                                {{/if}}

                            {{else}}
                                <a>???</a>
                                <a>???</a>
                            {{/if}}

                            <div class="list-controls"></div>
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="sheet-list">
        <div class="list-header row-content">
            <div class="list-name">{{localize "SHEET.PassiveEffects"}}</div>
            <div class="flex">{{localize "SHEET.Source"}}</div>
            <div class="list-controls">
                <a class="list-control">
                    <i class="fas fa-plus"></i>
                </a>
            </div>
        </div>
        <div class="list-content">
            {{#each effects.temporary}}
                <div class="list-row">
                    <div class="row-content">
                        {{> systems/wfrp4e/templates/partials/list-effect.hbs effect=this}}
                    </div>
                    <div class="row-content">
                        {{#if effect.manualScripts.length}}
                            <div class="manual-script-buttons">
                                {{> systems/wfrp4e/templates/partials/manual-scripts.hbs scripts=effect.manualScripts}}
                            </div>
                        {{/if}}
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="sheet-list">
        <div class="list-header row-content">
            <div class="list-name">{{localize "SHEET.DisabledEffects"}}</div>
            <div class="flex">{{localize "SHEET.Source"}}</div>
            <div class="list-controls">
                <a class="list-control">
                    <i class="fas fa-plus"></i>
                </a>
            </div>
        </div>
        <div class="list-content">
            {{#each effects.disabled}}
                <div class="list-row">
                    <div class="row-content inactive">
                        {{> systems/wfrp4e/templates/partials/list-effect.hbs effect=this}}
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="form-group">
        <label>{{localize "EFFECT.SystemEffects"}}</label>
        <div class="form-fields">
            <select>
                <option>{{localize "EFFECT.SelectEffect"}}</option>
                {{#each effects.system as |effect e|}}
                    <option value="{{e}}" data-source="{{effect.obj}}">{{effect.name}}</option>
                {{/each}}
            </select>
        </div>
    </div>
</section>