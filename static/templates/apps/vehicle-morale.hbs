<form autocomplete="off" onsubmit="event.preventDefault();">

    <div class="form-group">
        <label>{{localize "VEHICLE.StartingMorale"}}</label>
        <input type="number" class="starting" name="system.status.morale.starting" value="{{system.status.morale.starting}}">
    </div>
    <h2>{{localize "VEHICLE.MoraleSources"}}</h2>
    <div class="sources">
        <ul>
            {{#each system.status.morale.sources}}
            <div class="source" data-index="{{@key}}">
                <input type="checkbox" name="active" {{checked this.active}}>
                <input type="text" name="description" value="{{this.description}}">
                <input type="text" name="formula" value="{{this.formula}}">
                <a class="remove-morale"><i class="fa-solid fa-xmark"></i></a>
            </div>
            {{/each}}
        </ul>
    </div>
    <button type="button" class="add-morale"><i class="fa-solid fa-plus"></i></button>
</form>